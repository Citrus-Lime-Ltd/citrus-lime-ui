{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "strictNullChecks": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "forceConsistentCasingInFileNames":true,
        "types": [
            "webpack-env"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "src/App.css",
        "src/assets/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
